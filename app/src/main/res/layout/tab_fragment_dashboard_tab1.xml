<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="142dp"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        app:srcCompat="@drawable/sulogo" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_marginBottom="-223dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/flat_bal"
            android:layout_width="146dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:text="Flat Balance"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/total_flat_bal"
            android:layout_width="167dp"
            android:layout_height="30dp"
            android:layout_marginEnd="36dp"
            android:text="Total Flat Balance"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="317dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personal_bal"
            android:layout_width="147dp"
            android:layout_height="30dp"
            android:text="Personal Balance"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/total_personal_bal"
            android:layout_width="169dp"
            android:layout_height="30dp"
            android:text="Total Personal Balance"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_bal"
            android:layout_width="145dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:text="Total Balance"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/total_bal_ans"
            android:layout_width="171dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:text="Total_Balance_Ans"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>



</RelativeLayout>